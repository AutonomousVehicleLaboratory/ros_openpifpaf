<launch>

    <arg name="rgb_topic" default="/oak/rgb/image_raw" />
    <arg name="depth_topic" default="/oak/stereo/image_raw" />

    <param name="rgb_topic" value="$(arg rgb_topic)" />
    <param name="depth_topic" value="$(arg depth_topic)" />

    <!-- These are only needed for playing back and visualizing rosbag data which is compressed 
        On the actual platform we do not need these as we have access to the raw data directly
    -->
    <!-- Convert the /$(arg camera_id)/compressed topic into /$(arg camera_id)" -->
    <node name="rgb_republisher" type="republish" pkg="image_transport" output="screen" args="compressed in:=$(arg rgb_topic) raw out:=$(arg rgb_topic)" />
    <node name="rgb_republisher_depth" type="republish" pkg="image_transport" output="screen" args="compressed in:=$(arg depth_topic) raw out:=$(arg depth_topic)" />

    <!-- <node name="rs_republisher_depth" type="republish" pkg="image_transport" output="screen" args="compressed in:=/camera/depth/image_rect_raw raw out:=/camera/depth/image_rect_raw" /> -->
    


    <node pkg="ros_openpifpaf" type="camera_openpifpaf_node.py" name="open_pifpaf_node" output="screen">
    </node>
    
</launch>